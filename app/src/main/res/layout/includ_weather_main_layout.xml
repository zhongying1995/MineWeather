<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/county_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="西青区"
                android:textSize="28sp" />

            <ImageView
                android:id="@+id/is_collect_iv"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:src="@mipmap/uncollect" />

            <TextView
                android:id="@+id/now_temp_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:text="23°"
                android:textSize="90sp" />

            <ImageView
                android:id="@+id/now_cond_icon_iv"
                android:layout_width="34dp"
                android:layout_height="34dp"
                android:layout_marginLeft="11dp"
                android:scaleType="fitCenter"
                android:src="@mipmap/sunny"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginStart="11dp" />

            <TextView
                android:id="@+id/mow_cond_txt_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/now_temp_tv"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/now_cond_icon_iv"
                android:text="阴"
                android:textSize="26sp" />

            <LinearLayout
                android:id="@+id/aqi_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/is_collect_iv"
                android:layout_marginTop="30dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="空气："
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/air_quality_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="良"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_below="@+id/aqi_linear"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/min_temp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="20°"
                    android:textSize="30sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="3dp"
                    android:text="/"
                    android:textSize="26sp" />

                <TextView
                    android:id="@+id/max_temp_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="30°"
                    android:textSize="30sp" />
            </LinearLayout>

        </RelativeLayout>


</LinearLayout>
